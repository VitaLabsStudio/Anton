{
  "name": "@antone/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "worker:start": "pm2 start ../ecosystem.config.js",
    "worker:stop": "pm2 stop antone-stream-monitor",
    "worker:restart": "pm2 restart antone-stream-monitor",
    "worker:logs": "pm2 logs antone-stream-monitor",
    "worker:status": "pm2 status antone-stream-monitor",
    "worker:delete": "pm2 delete antone-stream-monitor"
  },
  "dependencies": {
    "@antone/shared": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@opentelemetry/api": "^1.9.0",
    "@prisma/client": "^6.1.0",
    "axios": "^1.7.9",
    "bottleneck": "^2.19.5",
    "chokidar": "^5.0.0",
    "dotenv": "^16.4.7",
    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "jstat": "^1.9.6",
    "kafkajs": "^2.2.4",
    "luxon": "^3.7.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "openai": "^6.10.0",
    "opossum": "^2.0.9",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "rrule": "^2.8.1",
    "seedrandom": "^3.0.5",
    "simple-statistics": "^7.8.8",
    "snoowrap": "^1.23.0",
    "twitter-api-v2": "^1.18.2",
    "uuid": "^11.0.3",
    "yaml": "^2.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/opossum": "^8.1.9",
    "@types/seedrandom": "^3.0.8",
    "@types/uuid": "^10.0.0",
    "fast-check": "^4.3.0",
    "pm2": "^5.4.3",
    "prisma": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
